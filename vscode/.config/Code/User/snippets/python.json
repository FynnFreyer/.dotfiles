// Docs @ https://code.visualstudio.com/docs/editing/userdefinedsnippets
{
    "Main Guard": {
        "prefix": "main",
        "body": [
            "if __name__ == \"__main__\":",
            "\t${0:main()}"
        ],
        "description": "Standard execution guard"
    },
    "Typed Method or Function": {
        "prefix": "def",
        "body": [
            "def ${1:func_name}(${2:self, }${3:param}: ${4:type}) -> ${5:None}:",
            "\t\"\"\"",
            "\t${6:Short description...}",
            "",
            "\t:param ${3:param}: ${7:description}",
            "\t:return: ${8:description}",
            "\t\"\"\"",
            "\t${0:pass}"
        ],
        "description": "Creates a function with type hints and reST docstring"
    },
    "Property Full (Getter+Setter)": {
        "prefix": "prop",
        "body": [
            "@property",
            "def ${1:name}(self) -> ${2:str}:",
            "\t\"\"\"",
            "\t${3:Get the $1.}",
            "",
            "\t:return: ${4:description}",
            "\t\"\"\"",
            "\treturn ${5:self._$1}",
            "",
            "@${1:name}.setter",
            "def ${1:name}(self, ${1:name}_value: ${2:str}) -> None:",
            "\t\"\"\"",
            "\t${3:the $1.}",
            "",
            "\t:return: Nothing",
            "\t\"\"\"",
            "\tself._${1:name} = ${1:name}_value",
        ],
        "description": "Creates a function with type hints and reST docstring",
    },
    "Property Getter": {
        "prefix": "getter",
        "body": [
            "@property",
            "def ${1:name}(self) -> ${2:str}:",
            "\t\"\"\"",
            "\t${3:Get the $1.}",
            "",
            "\t:return: ${4:description}",
            "\t\"\"\"",
            "\treturn ${0:self._$1}",
        ],
        "description": "Creates a getter for a property",
    },
    "Property Setter": {
        "prefix": "setter",
        "body": [
            "@${1:name}.setter",
            "def ${1:name}(self, ${1:name}_value: ${2:str}) -> None:",
            "\t\"\"\"",
            "\t${3:Set the $1.}",
            "",
            "\t:return: Nothing",
            "\t\"\"\"",
            "\tself._${1:name} = ${1:name}_value",
        ],
        "description": "Creates a setter for a property",
    },
}
